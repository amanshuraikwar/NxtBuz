<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/busIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_normal"
        android:src="@drawable/ic_bus_24"
        app:layout_constraintBottom_toBottomOf="@id/serviceNumberTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/serviceNumberTv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/serviceNumberTv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_bus_service_number"
        android:gravity="center"
        android:textAppearance="?textAppearanceHeadline6"
        android:textColor="?colorOnPrimary"
        app:layout_constraintBottom_toBottomOf="@id/serviceProxyTv"
        app:layout_constraintEnd_toEndOf="@id/serviceProxyTv"
        app:layout_constraintStart_toStartOf="@id/serviceProxyTv"
        app:layout_constraintTop_toTopOf="@id/serviceProxyTv"
        tools:text="961" />

    <TextView
        android:id="@+id/serviceProxyTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_very_small"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_normal"
        android:paddingStart="2dp"
        android:paddingTop="4dp"
        android:paddingEnd="2dp"
        android:paddingBottom="2dp"
        android:text="MMMM"
        android:textAppearance="?textAppearanceHeadline6"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/busIv"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/destinationIv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="@dimen/margin_small"
        android:src="@drawable/ic_destination_16"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/serviceProxyTv"
        app:layout_constraintStart_toEndOf="@id/serviceProxyTv"
        app:layout_constraintTop_toTopOf="@id/serviceProxyTv"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/destinationTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginEnd="@dimen/margin_small"
        android:textAppearance="@style/TextAppearance.AppTheme.Body1.Bold"
        android:textColor="?colorOnSurface"
        app:flow_verticalStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/originTv"
        app:layout_constraintEnd_toStartOf="@id/starIv"
        app:layout_constraintStart_toEndOf="@id/destinationIv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Marine Ctr Rd" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/originTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_small"
        android:ellipsize="end"
        android:singleLine="true"
        android:textAppearance="?textAppearanceOverline"
        android:textColor="@color/colorOnSurfaceMedium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/starIv"
        app:layout_constraintStart_toStartOf="@id/destinationTv"
        app:layout_constraintTop_toBottomOf="@id/destinationTv"
        tools:text="From Marine Ctr Rd" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/starIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="0dp"
        android:paddingTop="@dimen/padding_normal"
        android:paddingEnd="@dimen/margin_normal"
        android:paddingBottom="@dimen/padding_normal"
        android:tint="@color/yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_round_star_border_24" />
</androidx.constraintlayout.widget.ConstraintLayout>