<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Top level NxtBuz theme to be used in AndroidManifest.xml-->
    <style name="AppTheme.NxtBuz" parent="AppTheme">
        <item name="android:statusBarColor">?colorSurface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">?colorControlHighlight</item>
    </style>

    <style name="AppTheme.NxtBuz.ActionBar" parent="AppTheme.ActionBar">
        <item name="android:statusBarColor">?colorSurface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">?colorControlHighlight</item>
        <item name="android:actionBarStyle">@style/Widget.NxtBuz.ActionBar</item>
        <item name="actionBarStyle">@style/Widget.NxtBuz.ActionBar</item>
    </style>
</resources>
