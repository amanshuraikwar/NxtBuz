<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--LIGHT COLOR THEME-->

    <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
    <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
    <!--selection controls.-->

    <color name="colorPrimary">#08ACFD</color>
    <color name="colorPrimaryVariant">#0288D1</color>

    <color name="colorSecondary">@color/colorPrimary</color>
    <color name="colorSecondaryVariant">@color/colorPrimaryVariant</color>

    <!--colorBackground appears behind scrollable content and is used for the default window-->
    <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
    <!--and menus. colorError is used to indicate an error state for components such as-->
    <!--text fields.-->

    <color name="colorBackground">#eef0f2</color>
    <color name="colorSurface">#ffffff</color>
    <color name="colorError">#b00020</color>

    <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
    <!--on which they appear.-->
    <color name="colorOnPrimary">#ffffff</color>
    <color name="colorOnSecondary">@color/colorOnPrimary</color>
    <color name="colorOnBackground">#000000</color>
    <color name="colorOnSurface">#000000</color>
    <color name="colorOnError">#ffffff</color>

    <color name="colorOutline">#1f000000</color>
</resources>